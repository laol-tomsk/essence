<%= title 'New Work Product' %>

<%= form_for(@work_product) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="box tabular">

    <p>
      <%= f.label :work_product_definition_id %>
      <%= f.collection_select(:work_product_definition_id, @work_product_definitions, :id, :name, {}, {class: "form-control"}) %>
    </p>

    <p>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </p>

    <p>
      <%= f.label :link %>
      <%= f.text_area :link, class: "form-control" %>
    </p>

    <%= f.hidden_field :alpha_id, value: @alpha.id %>
    <%= hidden_field_tag :project_id, @project.id %>
  </div>

  <%= f.submit l(:button_create) %>
<% end %>
